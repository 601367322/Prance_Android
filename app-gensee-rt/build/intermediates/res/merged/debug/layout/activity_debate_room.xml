<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">

    <RelativeLayout
        android:id="@+id/vedio_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:id="@+id/view_of_vedio_two"
            android:layout_width="wrap_content"
            android:layout_height="476px">

            <LinearLayout
                android:id="@+id/linVideos"
                android:layout_width="match_parent"
                android:layout_height="476px"
                android:orientation="horizontal">


                <com.gensee.view.LocalVideoView
                    android:id="@+id/locVideo"
                    android:layout_width="0dp"
                    android:layout_height="476px"
                    android:focusable="true"
                    android:layout_weight="1" />

                <com.gensee.view.GSVideoView
                    android:id="@+id/opposition_vedio"
                    android:layout_width="0dp"
                    android:layout_height="476px"
                    android:layout_weight="1"
                    />

            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:text="182.5万" />

        </RelativeLayout>

        <TextView
            android:id="@+id/debte_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_of_vedio_two"
            android:layout_centerHorizontal="true"
            android:text="长的丑该如何逆袭"
            android:textColor="#a8a8a8"
            android:textSize="20sp" />


        <RelativeLayout
            android:id="@+id/populty"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/debte_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="45.5%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="流氓才说好" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54.5%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="卧槽，太人性化了" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/percent_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/populty">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:background="#f04b37"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="3333" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:background="#66ccff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="3333" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>


    <ListView
        android:id="@+id/xlistview_room_debate"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/vedio_view"/>



    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/expression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="3dp"
            android:id="@+id/et_say_something"
            android:layout_toRightOf="@id/expression"
            android:layout_width="502sp"
            android:layout_height="46sp"
            android:hint="说点什么" />

        <TextView
            android:layout_toRightOf="@id/et_say_something"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</RelativeLayout>
